<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FBC02D" /> <!-- MÃ¡s oscuro al pulsar -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFEB3B" /> <!-- Amarillo brillante -->
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="#FBC02D" />
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" />
        </shape>
    </item>

</selector>
