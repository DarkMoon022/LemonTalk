<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando se pulsa -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEB3B" /> <!-- Color al presionar (amarillo) -->
            <corners android:radius="16dp" /> <!-- Cambio a android:radius -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF176" /> <!-- Fondo normal (amarillo mÃ¡s suave) -->
            <stroke android:width="2dp" android:color="#359c12" /> <!-- Borde con color dorado oscuro -->
            <corners android:radius="16dp" /> <!-- Cambio a android:radius -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</selector>
